@model IEnumerable<mvc_planosaude.Models.Paciente>

@{
    ViewData["Title"] = "Lista de Pacientes";
}

<h2>Pacientes</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<p>
    <a class="btn btn-primary" asp-action="Create">Novo Paciente</a>
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Nome Completo</th>
            <th>Data de Nascimento</th>
            <th>CPF</th>
            <th>Endereço</th>
            <th>Telefone</th>
            <th>Opções</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var paciente in Model)
        {
            <tr>
                <td>@paciente.NomeCompleto</td>
                <td>@paciente.DataNascimento.ToString("dd/MM/yyyy")</td>
                <td>@paciente.CPF</td>
                <td>@paciente.Endereco</td>
                <td>@paciente.Telefone</td>
                <td>
                    <a class="btn btn-info" asp-action="Update" asp-route-id="@paciente.Id">Editar</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@paciente.Id"
                       onclick="return confirm('Tem certeza que deseja excluir este paciente?');">
                        Excluir
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
