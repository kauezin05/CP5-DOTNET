@model mvc_planosaude.Models.PacientePlano

@{
    ViewData["Title"] = "Novo PacientePlano";
}

<h1>Novo PacientePlano</h1>

<form asp-action="Create" method="post" novalidate>
    <div class="form-group">
        <label asp-for="PacienteId"></label>
        <select asp-for="PacienteId" asp-items="@(new SelectList(ViewBag.Pacientes, "Id", "NomeCompleto"))" class="form-control">
            <option value="">Selecione um Paciente</option>
        </select>
        <span asp-validation-for="PacienteId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PlanoSaudeId"></label>
        <select asp-for="PlanoSaudeId" asp-items="@(new SelectList(ViewBag.Planos, "Id", "Nome"))" class="form-control">
            <option value="">Selecione um Plano de Saúde</option>
        </select>
        <span asp-validation-for="PlanoSaudeId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
</form>

@section Scripts {
    @{
       
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
